/*
1. stwórz klase pozwalajaca na przechowywanie dowolnej ilosci elementów typu int w tablicy
2. Wykonaj pomiar czasu zapisu do obiektu klasy z pkt 1.
   Dla ilosci elementów n=10^1, 10^3, 10^5, 10^6, 10^9

*/

#include<iostream>
using namespace std;
int main (void)
{
  int N=10;
  int *tab=new int[N];
  int ile_el=100000;
  int i,j;
  for(i=0;i<ile_el; i++)
    {
      if(i<N)
      tab[i]=i;
      
      else
	{
	  int *tmp= new int[N+1];
	  for(j=0; j<N; j++)
	      tmp[j]=tab[j];

	  //delete[] tab;
	      tab=tmp;
	  
	  tab[N+1]=N+1;
	  delete[] tmp;
	}
      N=N+1;
      cout<<tab[i]<<endl;
    }
 

  return 0;
}
